            styleClass="mainWindow"
            stylesheets="@/css/loginWindow.css"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="se.newton.sysjg3.newtonchess.controllers.MainWindowController">
    <top>
        <Label styleClass="header-section"  id="header-text" text="Newton Chess"></Label>
    </top>
    <bottom>
        <HBox>
            <Button fx:id="logIn"  text="Log In"></Button>
            <Button fx:id="signUp"  text = "Sign up"></Button>
        </HBox>
    </bottom>
</BorderPane>